{{!-- Navigation bar --}}
<nav class="navbar">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Mongo Scraper</a>
        </div>
        <ul class="nav navbar-nav mr-auto top-buttons">
            <li class="nav-item active">
                <a class="nav-link home" href="#">Home </a>
            </li>
            <li class="nav-item saved">
                <a class="nav-link" href="#">Saved Articles</a>
            </li>
            <li><button class="btn btn-warning scrape">Scrape New Articles</button></li>
            <li><button class="btn btn-warning clear">Clear Articles</button></li>
        </ul>
    </div>
</nav>

<div id="wrapper">
    <div class="articles">
        <div class="load"></div>
        {{#each articles}}
            {{#unless saved}}
            <div class="article">
                <h2>{{title}}</h2>
                <button class="btn btn-primary save" data-id="{{_id}}">Save</button>
                <div id="notes">
                    {{note}}
                </div>
            </div>
            {{/unless}}
        {{/each}}
    </div>
    <a href="/scrape">start scraping...</a>
</div>