<nav class="navbarnavbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
            <a class="navbar-brand" href="#">Mongo Scraper</a>
            <li><a class="nav-item nav-link home" href="#">Home</a></li>
            <li><button class="btn btn-danger clear">Clear Articles</button></li>
    </div>
</nav>
<br>

<div class="articles">
    {{#each articles}}
        {{#if saved}}
            <div class="article">
                <img src="{{image}}" style="height:100px;">
                <a href="{{link}}"><h2>{{title}}</h2></a>
                <p>{{summary}}</p>
                <button class="btn btn-primary unsave" data-id="{{_id}}">DELETE FROM SAVED</button>
                <button class="btn btn-primary addNote" data-id="{{_id}}">ARTICLE NOTES</button>
                <br>
            </div>
        {{/if}}
    {{/each}}
</div>


 {{!-- modal for displaying and creating notes --}}
<div id="noteModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title text-center">Add a note</h4>
        </div>
        <div id="notes" class="modal-body"></div>
      </div>
    </div>
</div>